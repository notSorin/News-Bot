<?xml version="1.0" encoding="UTF-8"?>

<aiml>
	<category>
		<pattern>HI</pattern>
		<template>Hey there!</template>
	</category>
	
	<category>
		<pattern>STOP</pattern>
		<template>
			I'm not doing anything...
		</template>
	</category>
	
	<category>
		<pattern>BYE</pattern>
		<template>
			Goodbye :(
		</template>
	</category>
	
	<category>
		<pattern>EXTRACT</pattern>
		<template>
			<think><set name = "topic">extract-information</set></think>
			OK, send me the article and I'll see what I can extract from it.
		</template>
	</category>
	
	<category>
		<pattern>CLUSTER</pattern>
		<template>
			<think><set name = "topic">cluster-article</set></think>
			Let's do some clustering. Send me the article, and I'll tell you some key words representing it.
		</template>
	</category>
	
	<topic name = "extract-information">
		<category>
			<pattern>*</pattern>
			<template>
				<doextract></doextract>
			</template>
		</category>
		
		<category>
			<pattern>PEOPLE</pattern>
			<template>
				<getpeople></getpeople>
			</template>
		</category>
		
		<category>
			<pattern>DATES</pattern>
			<template>
				<getdates></getdates>
			</template>
		</category>
		
		<category>
			<pattern>LOCATIONS</pattern>
			<template>
				<getlocations></getlocations>
			</template>
		</category>
		
		<category>
			<pattern>ORGANIZATIONS</pattern>
			<template>
				<getorganizations></getorganizations>
			</template>
		</category>
		
		<category>
			<pattern>MONEY</pattern>
			<template>
				<getmoney></getmoney>
			</template>
		</category>
		
		<category>
			<pattern>PERCENTAGES</pattern>
			<template>
				<getpercentages></getpercentages>
			</template>
		</category>
		
		<category>
			<pattern>STOP</pattern>
			<template>
				<think><set name = "topic">default</set></think>
				Enough information extraction... Let's do something else.
			</template>
		</category>
	</topic>
	
	<topic name = "cluster-article">
		<category>
			<pattern>*</pattern>
			<template>
				<docluster></docluster>
			</template>
		</category>
		
		<category>
			<pattern>STOP</pattern>
			<template>
				<think><set name = "topic">default</set></think>
				Alright, to something else then...
			</template>
		</category>
	</topic>
</aiml>